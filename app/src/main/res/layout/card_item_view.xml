<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="2dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40FA8065">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:id="@+id/measure_type_layout">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:id="@+id/text_measure_type"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/measure_type" />
            </LinearLayout>

            <TextView
                    android:id="@+id/card_time"
                    android:layout_toEndOf="@+id/measure_type_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"/>

            <TextView
                    android:id="@+id/card_description"
                    android:layout_toEndOf="@+id/measure_type_layout"
                    android:layout_below="@id/card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"/>

            <ImageButton
                    android:id="@+id/card_remove_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_delete"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>